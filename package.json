{
  "name": "movie_app_server",
  "version": "1.0.0",
  "description": "movie app server with nodejs/express + typescript",
  "main": "index.js",
  "author": "avnendv",
  "license": "MIT",
  "_moduleAliases": {
    "@/config": "./dist/config",
    "@/entity": "./dist/entity",
    "@/middlewares": "./dist/middlewares",
    "@/models": "./dist/models",
    "@/controllers": "./dist/controllers",
    "@/services": "./dist/services",
    "@/migration": "./dist/migration",
    "@/utils": "./dist/utils",
    "@/logs": "./dist/logs",
    "@/routes": "./dist/routes",
    "@/plugins": "./dist/plugins",
    "@/swagger": "./dist/swagger"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint ./src --fix --max-warnings=0",
    "lint:prettier": "prettier --write  \"src/**/*.{js,ts,json,tsx,css,less,scss,vue,html,md}\"",
    "prepare": "husky install",
    "tsc-init": "tsconfig.json",
    "build": "rm -rf dist build && tsc && uglifyjs-folder ./dist -x .js -eo ./dist && node ./dist/index.js",
    "server": "nodemon --inspect dist/index.js",
    "start": "node dist/index.js",
    "typeorm": "typeorm-ts-node-commonjs",
    "watch": "tsc -w",
    "migration::generate": "typeorm-ts-node-commonjs migration:generate -t 1677169173922 src/migration/generate-migration -d src/config/DataSource.ts",
    "migration::run": "typeorm-ts-node-commonjs migration:run -t 1677169173922 -d dist/config/DataSource.js"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.3",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.6",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.14.0",
    "@types/nodemailer": "^6.4.7",
    "@types/shortid": "^0.0.29",
    "@types/swagger-ui-express": "^4.1.4",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "compression": "^1.7.4",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "nodemon": "^2.0.20",
    "prettier": "^3.0.3",
    "swagger-ui-express": "^5.0.0",
    "typescript": "^4.9.5",
    "uglify-js": "^3.17.4",
    "uglifyjs-folder": "^3.2.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "helmet": "^6.1.5",
    "husky": "^8.0.3",
    "joi": "^17.8.3",
    "jsonwebtoken": "^9.0.0",
    "module-alias": "^2.2.2",
    "morgan": "^1.10.0",
    "mysql": "^2.18.1",
    "nodemailer": "^6.9.1",
    "reflect-metadata": "^0.1.13",
    "shortid": "^2.2.16",
    "ts-node": "^10.9.1",
    "typeorm": "^0.3.12",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  }
}
